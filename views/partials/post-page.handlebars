<h1 class="animated fadeIn text-center logo-name"><img src = "/styles/logo.png" class="logo"> Life Journal</h1>
<div class="grid-container">
    <div class="grid-x grid-margin-x">
        <div class="medium-2 cell"></div>
        <div class="medium-8 cell align-center">
            <div class="table-scroll align-center">
                <table class="scroll hover t-user">
                    <thead>
                        <tr>
                          <th width="870" class="post-title">{{data1.title}}</th>
                        </tr>
                        <tr></tr>
                    </thead>
                    <tbody class="user-table">
                    <tr>
                        <td>{{data1.body}}
                            <p class="date">{{moment date=data1.createdAt format="MMMM DD, YYYY"}}</p>
                            <img class="img" src="{{data1.image}}">
                        </td>
                        <td>
                            <button id="update">Update</button>
                            <button id="delete">Delete</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="medium-2 cell"></div>
    </div>
</div>
